<div class="text-center">
<%= image_tag "dnd.png", height: 300%>
</div><br>

<h1 class="text-center">Welcome to DnD Login!</h1><br>



<!-- Default form login -->
<body class="container">
<%= form_tag do%>
<div class="text-center border border-light p-5" action="#!">

    <p class="h4 mb-4">Sign in</p>

    <!-- Email -->
    <%= email_field_tag "create_username", nil, :class => "form-control mb-4",  :placeholder => "E-mail"%>

    <!-- Password -->
    <%= password_field_tag "create_password", nil, :class => "form-control mb-4",  :placeholder => "Password"%>

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
            </div>
        </div>
        <div>
            <!-- Forgot password -->
            <a href="">Forgot password?</a>
        </div>
    </div>

    <!-- Sign in button -->
    <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

    <!-- Register -->
    <p>Not a member?
        <a data-toggle="modal" data-target="#modalRegisterForm" href="">Register</a>
    </p>



</div>
<% end %>
</body>
<!-- Default form login -->





<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Create Account</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <%= email_field_tag "create_username", nil, :class => "form-control mb-4",  :placeholder => "E-mail", :id => "orangeForm-name"%>
        </div>

        <div class="md-form mb-4">
          <%= password_field_tag "create_password", nil, :class => "form-control validate",  :placeholder => "Password", :id => "orangeForm-pass"%>
        </div>

        <div class="md-form mb-4">
          <%= password_field_tag "create_password", nil, :class => "form-control validate",  :placeholder => "Verify Password", :id => "orangeForm-pass"%>
        </div>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn">Create</button>
      </div>
    </div>
  </div>
</div>


