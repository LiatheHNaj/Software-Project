<div class="text-center">
<%= image_tag "dnd.png", height: 300%>
</div><br>

<h2 class="text-center">Forgot your password?</h2>
<body class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="text-center border border-light p-5" action="#!">

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "mb-4",  :placeholder => "Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "btn btn-info my-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
